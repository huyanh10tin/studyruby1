<meta content='<%= user_signed_in? ? current_user.id : "" %>' name='user-id'/>
<header class="navbar navbar-fixed-top navbar-inverse navbar-static-top">
  <div class="container">
    <%= link_to "Instagram App", root_path, id: "logo" %>
    <!--<div class="spinner"></div>-->
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "Instagram", posts_path %></li>
        <% if logged_in? %>
            <li class="nav-item btn-group" data-behavior='notifications'>
              <a class="dropdown-toggle nav-link" type="button" data-behavior='notifications-link' id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <%= fa_icon "bell"%><span data-behavior="unread-count"></span>
              </a>
              <ul class="dropdown-menu" aria-labelledby="dropdonwMenu1" data-behavior="notification-items">
              </ul>
            </li>
            <li><%= link_to "New Post", new_post_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu custom_huyanh">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Posted", profile_path(current_user.username) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>

        <% end %>
      </ul>
    </nav>
  </div>
</header>