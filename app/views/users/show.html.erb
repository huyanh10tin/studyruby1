<%= @user.name %>,<%= @user.email %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar_file_size %>
          <%= image_tag @user.avatar,size:50%>

        <% else %>
            <%= image_tag 'default-avatar.jpg',size:50%>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats"%>
    </section>
    <h1>Post Instagram</h1>
    <section class="posts">
      <%= render @posts if @posts%>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in?%>
    <% if @user.microposts.any? %>
      <h3>Status (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>

        </ol>
        <%= will_paginate @microposts%>
    <% end %>
  </div>
</div>