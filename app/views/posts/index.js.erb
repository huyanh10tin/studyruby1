var delayMillis = 1000; //1 second

setTimeout(function() {
    //your code to be executed after 1 second
    $('#posts').append('<%= escape_javascript(render 'posts')%>');
    $('#paginator').html("<%= escape_javascript(link_to_next_page(@posts, 'LOAD MORE', remote: true,data: {disable_with:"<i class='fa fa-refresh fa-spin fa-3x fa-fw' aria-hidden='true'></i> <span class='sr-only'>Refreshing...</span>"}, id: 'load_more'))%>");
    if (!$('#load_more').length) { $('#paginator').remove(); }
}, delayMillis);
